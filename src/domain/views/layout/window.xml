<?xml version="1.0" encoding="UTF-8"?>
<Container bgcolor="#444444" expand="True" margin="0" padding="0">
    <Column expand="True" spacing="0">
        <!-- Barra -->
        <Container bgcolor="#222222" margin="0" padding="5">
            <Row>
                <Row alignment="START">
                    <Text>{{ window or 'ciao' }}</Text>
                </Row>
                <Row alignment="END" expand="True">
                    <IconButton icon="VIEW_SIDEBAR_ROUNDED" on_click="window::shift" />
                    <IconButton icon="MINIMIZE" on_click="window::mini" />
                    <IconButton icon="CLOSE" on_click="window::remove" />
                </Row>
            </Row>
        </Container>
        <!-- Contenuto -->
        <ListView spacing="10" padding="0" expand="True">
            <TextField expand="1" multiline="True" locator="{{ window or 'ciao' }}" ></TextField>
        </ListView>
    </Column>
</Container>