<?xml version="1.0" encoding="UTF-8"?>
<Container height="40" bgcolor="#555555" margin="0" padding="3">
    <Row expand="1">
        <Row alignment="START" expand="1">
            <Dropdown text_size="18" width="80">
                <DropdownOption>Main</DropdownOption>
                <DropdownOption>Dev</DropdownOption>
            </Dropdown>
            <IconButton id="debug" tooltip="debug" icon="BUG_REPORT_OUTLINED" on_click="setting::plus_click" />
            <IconButton id="info" tooltip="info" icon="INFO_OUTLINED" on_click="setting::plus_click" />
            <IconButton id="warning" tooltip="warning" icon="REPORT_PROBLEM_OUTLINED"
                on_click="setting::plus_click" />
            <IconButton id="error" tooltip="errors" icon="ERROR_OUTLINE" on_click="setting::plus_click" />
            <IconButton id="critical" tooltip="critical" icon="REPORT_OUTLINED"
                on_click="setting::plus_click" />
            <IconButton id="port" tooltip="ports" icon="SETTINGS_INPUT_ANTENNA"
                on_click="setting::plus_click" />
        </Row>
        <Row alignment="END" expand="1">
            <Text id="selected">Blocco:10 Riga:1 Col:10</Text>
            <Text id="indentation">Spaces:4</Text>
            <Text id="encoding">UTF-8</Text>
            <Text id="endOfLine">CRLF/LF</Text>
            <Text id="mode">Edit</Text>
            <Text id="extension">XML</Text>
        </Row>
    </Row>
</Container>