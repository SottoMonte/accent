<?xml version="1.0" encoding="UTF-8"?>

<ListView expand="True" spacing="0" padding="0">
    <Column spacing="0">
        <Container bgcolor="#666666" margin="0" padding="5">
            <Row>
                <Row alignment="START">
                    <Text>{{ window or 'SubTitle' }}</Text>
                </Row>
                <Row alignment="END" expand="True">
                    <IconButton icon="SAVE_SHARP" on_click="setting::men_click" />
                    <IconButton icon="DELETE" on_click="setting::men_click" />
                    <IconButton icon="ARROW_DOWNWARD" on_click="setting::men_click" />
                    <IconButton icon="ARROW_UPWARD" on_click="setting::men_click" />
                    <IconButton icon="PREVIEW" on_click="setting::men_click" />
                </Row>
            </Row>
        </Container>
        <Stack>
            <TextField multiline="True" on_focus="bar_state_update">{{ file or '' }}</TextField>
            <ListView expand="True" spacing="0" padding="0">
                <Import view="@extede"/>
            </ListView>
        </Stack>
    </Column>
</ListView>